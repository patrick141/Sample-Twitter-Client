<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DetailedTweet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/profilePICC"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profilePICC"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/name1"
        android:text="TextView" />

    <TextView
        android:id="@+id/tweetText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name1"
        android:layout_toEndOf="@id/profilePICC"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="Tweet truncated body"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/likeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePIC"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/rtView"
        android:drawableLeft="@drawable/ic_vector_heart_stroke"
        android:text="TextView" />

    <TextView
        android:id="@+id/rtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagePIC"
        android:layout_toEndOf="@id/profilePICC"
        android:drawableLeft="@drawable/ic_vector_retweet_stroke"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imagePIC"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/tweetText"
        android:layout_centerHorizontal="true"
        tools:layout_below="@id/profilePICC"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/dateposted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="TextView" />


</RelativeLayout>